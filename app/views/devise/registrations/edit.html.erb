<main role="main" class="flex-shrink-0">
  <div class="container">
    <div class="row justify-content-center">
      <div class="form-col col-md-5">
        <h2 class="text-center">プロフィールを編集する</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field field-mt">
              <%= f.label :ユーザー名 %><br />
              <%= f.text_field :username, autofocus: true, autocomplete: "name" %>
            </div>

            <div class="field field-mt">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field field-mt mgb0">
              <%= f.label :新しいパスワード（英数字6文字以上） %><br />
                <span>※パスワードを変更しない場合は空白のままにしてください</span><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>

            <div class="field field-mt">
              <%= f.label :新しいパスワードの再入力 %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>

            <div class="field field-mt mgb0">
              <%= f.label :現在のパスワード %><br />
                <span>※アカウント情報を変更するには、現在のパスワードを入力する必要があります</span><br />
              <%= f.password_field :current_password, autocomplete: "current-password" %>
            </div>

            <div class="actions actions-mt">
              <%= f.submit "更新" %>
            </div>
          <% end %>

          <%= button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>

          <%= link_to "Back", :back %>

      </div>
    </div>
  </div>
</main>

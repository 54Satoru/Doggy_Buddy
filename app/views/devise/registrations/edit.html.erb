<main role="main" class="flex-shrink-0">
  <div class="container">
    <div class="row justify-content-center">
      <div class="form-col col-md-7 col-lg-5">
        <h2 class="text-center title-color">プロフィールを編集する</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field field-mt">
              <% if @user.image? %>
                <%= image_tag @user.image.url %>
              <% else %>
                <%= image_tag "/assets/default.png", :size => '160x160' %>
              <% end %>
            </div>
            <div type="button" class="image-btn field-mt">
              <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
            </div>
            <p id="image-btn-remove">
              <label>
                <%= f.check_box :remove_image %>
                画像を削除する
              </label>
            </p>

            <div class="field field-mt">
              <%= f.label :ユーザー名 %><br />
              <%= f.text_field :username, autofocus: true %>
            </div>

            <div class="field field-mt">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email %>
            </div>

            <div class="field field-mt">
              <%= f.label :自己紹介文 %><br />
              <%= f.text_area :profile %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field field-mt mgb0">
              <%= f.label :新しいパスワード（英数字6文字以上） %><br />
                <span>※パスワードを変更しない場合は空白のままにしてください</span><br />
              <%= f.password_field :password %>
            </div>

            <div class="field field-mt">
              <%= f.label :新しいパスワードの再入力 %><br />
              <%= f.password_field :password_confirmation %>
            </div>

            <div class="field field-mt mgb0">
              <%= f.label :現在のパスワード %><br />
                <span>※アカウント情報を変更するには、現在のパスワードを入力する必要があります</span><br />
              <%= f.password_field :current_password %>
            </div>

            <div class="actions actions-mt">
              <%= f.submit "更新" %>
            </div>
          <% end %>

          <%= button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete %>

          <%= link_to "Back", :back %>

      </div>
    </div>
  </div>
</main>

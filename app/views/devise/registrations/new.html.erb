<main role="main" class="flex-shrink-0">
  <div class="container">
    <div class="row justify-content-center">
      <div class="form-col col-md-5">
        <h2 class="text-center">新規登録</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field field-mt">
              <%= f.label :ユーザー名（10文字以内） %><br />
              <%= f.text_field :username, autofocus: true, autocomplete: "name" %>
            </div>

            <div class="field field-mt">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field field-mt">
              <%= f.label :パスワード（英数字6文字以上） %>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>

            <div class="field field-mt">
              <%= f.label :パスワード再入力 %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>

            <div class="actions actions-mt">
              <%= f.submit "Sign up" %>
            </div>
          <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</main>